pipeline{
  agent  any

  stages {
    stage ('preparing the  Artifact') {
      steps{
       sh '''
         zip -r ../frontend.zip *
       '''
      }
    }
    stage('upload artifact in nexus'){
      steps{
         sh '''
           curl -v -u admin:admin --upload-file frontend.zip http://172.31.2.243:8081/repository/frontend/frontend.zip
         '''

      }
    }

  }
}
